---
import Layout from '../layouts/Layout.astro';
import { projects } from '../data/projects';
---

<Layout title="Projects">
  <h1 class="text-3xl font-bold mb-8">Meus Projetos ðŸ’»</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    {projects.map((project) => (
      <div class="border dark:border-gray-700 rounded-lg overflow-hidden hover:shadow-lg transition-shadow">
        <img
          src={project.image}
          alt={project.title}
          class="w-full h-48 object-cover"
          loading="lazy"
        />
        <div class="p-6">
          <h3 class="text-xl font-bold mb-2">{project.title}</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-4">{project.description}</p>
          <div class="flex flex-wrap gap-2 mb-4">
            {project.technologies.map((tech) => (
              <span class="bg-gray-100 dark:bg-gray-800 px-2 py-1 rounded text-sm">
                {tech}
              </span>
            ))}
          </div>
          <a
            href={project.link}
            target="_blank"
            rel="noopener noreferrer"
            class="text-blue-500 hover:text-blue-600 dark:text-blue-400 dark:hover:text-blue-500"
            aria-label={`View ${project.title} project`}
          >
            View Project â†’
          </a>
        </div>
      </div>
    ))}
  </div>
</Layout>